<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAp.Detail"
             Title="Inicio"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">
    <ContentPage.Content>
        <StackLayout Margin="30,30,30,30">
            <controls:CircleImage 
                                  Margin="0,30,0,0"
                                  BorderColor="Blue"
                                  BorderThickness="3"
                                  HeightRequest="300"
                                  WidthRequest="300"
                                  Aspect="AspectFill"
                                  HorizontalOptions="Center"
                                  Source="R.jpg">

            </controls:CircleImage>
            <Button Margin="0,90,0,0" Text="Ver Equipos" x:Name="btnIinicio" TextColor="White" BorderWidth="70" BackgroundColor="Blue" 
                    ImageSource=""  Clicked="btnEquipos_cliclk"
                    ></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>